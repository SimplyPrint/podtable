{
  "name": "podtable",
  "version": "0.0.1",
  "description": "Podtable is a library to make HTML table fit into smaller devices",
  "author": "Afuwape Sunday <afuwapesunday12@gmail.com>",
  "license": "MIT",
  "private": false,
  "type": "module",
  "source": "src/index.js",
  "main": "dist/podtable.esm.js",
  "unpkg": "dist/podtable.js",
  "types": "index.d.ts",
  "scripts": {
    "build": "npm run build:esm && npm run build:umd",
    "build:esm": "microbundle --format esm",
    "build:umd": "microbundle --format umd --name Podtable",
    "prepublishOnly": "npm run build",
    "watch": "microbundle watch --format esm"
  },
  "keywords": [
    "HTML table",
    "responsive datatable"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/inlogicstudio/podtable.git"
  },
  "homepage": "https://github.com/inlogicstudio/podtable",
  "devDependencies": {
    "microbundle": "^0.13.3"
  }
}